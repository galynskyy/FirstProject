<div class="user">
	<div class="contact-info">
		<div class="contact-info__image">
			<!-- <img src="#" alt="#">	 -->
		</div>
		<div class="contact-info__name">
			<h2 class="contact-info__item _fio">
				{{name}}
			</h2>
			<h3  class="contact-info__item">
				<span class="contact-info__item _color_gray">
					Компания:
				</span>
				{{company}}
			</h3>
			<h3 class="contact-info__item">
				<span class="contact-info__item _color_gray">
					Кол-во задач:
				</span>
				{{countTasks}}
			</h3>
			<h3 class="contact-info__item">
				<span class="contact-info__item _color_gray">
				Кол-во целей:
				</span>
				{{countGoals}}
			</h3>
		</div>
	</div>
	<div class="tasks">
		<button class="tasks__btn" type="submit">+ добавить задачу</button>
		<div class="tasks__item_link">
			<a class="tasks__item _color_blue" href="#">3</a>
			<a class="tasks__item _link_blue" href="#">Действующих</a>
			<a class="tasks__item _color_red" href="#">1</a>
			<a class="tasks__item _link_red" href="#">Просроченных</a>
			<a class="tasks__item _color_gray" href="#">3</a>
			<a class="tasks__item _link_gray" href="#">Выполненых</a>
		</div>
	</div>
</div>
